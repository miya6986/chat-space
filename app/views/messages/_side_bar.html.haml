.user-box
  .user-header
    .user-menu
      .user-menu__name
        %p.user-menu__name--current-user
          = current_user.name
      %ul.user-menu__icon
        %li<
        =link_to new_group_path do
          = fa_icon 'edit', class: "user-menu__icon--create-group"
        %li<
        =link_to edit_user_path(current_user) do
          = fa_icon 'cog', class: "user-menu__icon--change-account"
  .chat-groups
    - current_user.groups.each do |group|
      = link_to group_messages_path(group) do
        .chat-groups__title
          %p< 
            = group.title
        .chat-groups__messages
          = group.show_last_message
          